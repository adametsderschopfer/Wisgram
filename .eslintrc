{
  "plugins": [
    // "prettier",
    "eslint-plugin-import",
    "eslint-plugin-prettier"
  ],
  "extends": [
    "eslint:recommended",
    // "plugin:prettier/recommended",
    // "prettier",
    "eslint-config-prettier",
    "eslint-config-airbnb"
  ],
  "parser": "babel-eslint",
  "env": {
    "es6": true,
    "es2017": true,
    "node": true
  },
  "rules": {
    "semi": [
      2,
      "always"
    ],
    "arrow-parens": 0,
    "requireForBlockBody": 0,
    "no-unused-vars": "warn",
    "prettier/prettier": [
      "error",
      {
        "endOfLine": "auto"
      }
    ],
    "linebreak-style": [
      "error",
      "windows"
    ],
    "import/no-dynamic-require": 0
  },
  "parserOptions": {
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  }
}